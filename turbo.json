{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "api:generate"],
      "outputs": [
        "dist/**",
        "build/**",
        "ent/api/openapi.json",
        "bin/**",
        "apps/backend/ent/api/openapi.json",
        "apps/backend/bin/**",
        "apps/frontend/dist/**"
      ]
    },
    "lint": {
      "dependsOn": ["api:generate"],
      "inputs": [
        "**/*.{ts,tsx,js,jsx,go,json,yml,yaml}",
        ".eslintrc*",
        ".golangci.yml",
        "go.mod",
        "go.sum",
        "package.json"
      ]
    },
    "dev": {
      "dependsOn": ["api:generate"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false
    },
    "api:generate": {
      "dependsOn": ["backend#generate:ent"],
      "outputs": [
        "src/api/generated-orval/**",
        "src/api/events.ts"
      ],
      "inputs": [
        "apps/backend/ent/api/openapi.json",
        "apps/frontend/orval.config.ts"
      ]
    },
    "backend#generate:swag": {
      "dependsOn": ["^build"],
      "inputs": [
        "apps/backend/cmd/dev/main.go",
        "apps/backend/internal/handler/custom/**",
        "apps/backend/internal/auth/**"
      ],
      "outputs": [
        "api/swag-docs/swagger.json",
        "api/swag-docs/swagger.yaml",
        "api/swag-docs/docs.go"
      ]
    },
    "backend#generate:ent": {
      "dependsOn": ["^build", "backend#generate:swag"],
      "inputs": [
        "apps/backend/ent/**",
        "apps/backend/api/swag-docs/swagger.json"
      ],
      "outputs": ["ent/api/openapi.json"]
    },
    "backend#build": {
      "dependsOn": ["backend#generate:ent"],
      "outputs": ["bin/**", "ent/api/openapi.json"]
    },
    "backend#dev": {
      "dependsOn": ["backend#generate:ent"],
      "cache": false,
      "persistent": true
    },
    "frontend#build": {
      "dependsOn": ["^build", "api:generate"],
      "outputs": ["dist/**"]
    }
  }
}