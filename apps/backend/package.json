{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "go build -o bin/server ./cmd/dev/main.go",
    "start": "./bin/server",
    "reset": "pnpm run db:generate && pnpm run api:generate && pnpm run db:seed",
    "dev": "wgo run ./cmd/dev/main.go",
    "db:seed": "go run ./cmd/seed/main.go",
    "db:generate": "go generate ./ent/...",
    "api:generate": "swag init -g cmd/dev/main.go --output api/swag-docs --parseDependency --parseInternal",
    "test": "go test ./..."
  }
}
